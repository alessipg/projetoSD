   <center>
      <ListView fx:id="listReviews" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <GridPane alignment="CENTER_LEFT" prefWidth="500.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label fx:id="lbTitle" text="titulo" />
                        <Label fx:id="lbDirector" text="Diretor" GridPane.rowIndex="1" />
                        <Label fx:id="lbScore" text="Avaliação: " GridPane.columnIndex="1" />
                        <Label fx:id="lbRatingCount" text="qtdavaliacoes" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="lbGenres" text="Generos" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label fx:id="lbYear" text="Ano" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
               </children>
            </HBox>
            <TextArea fx:id="lbSynopsis" editable="false" prefHeight="100.0" prefWidth="600.0" wrapText="true" />
         </children>
      </VBox>
   </top>
